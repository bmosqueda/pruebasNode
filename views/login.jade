extends ./layout.jade
block contenido
	div(class="col-md-8 remove-float center-block text-center big-top-space")
		h1 Inicio de sesión
		br
		form(action="/sessions" method="POST")
			div(class="form-group")
				label(for="email") Usuario
					input(type="text" id="email" placeholder="Email" name="email" class="form-control")
			div(class="form-group")
				label(for="password") Password
					input(type="password" id="password" name="password" placeholder="Password" class="form-control")
			div(class="form-group")
				input(type="submit" value="Inicar sesión" class="btn btn-info")
				a(href="/signup") No tengo cuenta